{{#extend layout title="tvshow tags" isBanner="false" ActiveLink="TVShows" active="tvshow-tags" isFlatpickr="true"
isSelect2="false" isSweetalert="true" path="../" }}
{{#content "content"}}

<div class="row streamit-wraper-table2">
    <div class="col-lg-4">
        <div class="card pb-3">
            <div class="card-header">
                <h2 class="episode-playlist-title wp-heading-inline">
                    <span class="position-relative "> Add New Tag </span>
                </h2>
            </div>
            <div class="card-body">
                <form>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="form-label flex-grow-1" for="Name">
                                    Tag Name <span class="text-danger">*</span>
                                </label>
                                <input id="Name" type="text" class="form-control " placeholder="Enter name of the tag."
                                    required>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="form-label flex-grow-1" for="Slug">
                                    Tag Slug <span class="text-danger">*</span>
                                </label>
                                <input id="Slug" type="text" class="form-control " placeholder="Enter slug of the tag."
                                    required>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="form-label flex-grow-1" for="Description">
                                    Tag Description
                                </label>
                                <textarea id="Description" class="form-control" rows="7"
                                    placeholder="Enter tag description here."></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                            data-bs-target="#video-modal">Add Tag
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-8">
        <div class="card pb-3">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h2 class="episode-playlist-title wp-heading-inline">
                    <span class="position-relative "> Tags list</span>
                </h2>
            </div>
            <div class="card-body">
                <div class="table-view table-space">
                    <table id="seasonTable"
                        class="data-tables table custom-table movie_table data-table-one custom-table-height"
                        data-toggle="data-table1">
                        <thead>
                            <tr class="text-uppercase">
                                <th class="">
                                    <input type="checkbox" class="form-check-input" />
                                </th>
                                <th>Tag Name</th>
                                <th>Tag Slug</th>
                                <th>Count</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{> components/widgets/data-table
                            term-name="Vikings"
                            term-slug="vikings"
                            count="0"
                            isTags="true"
                            }}

                            {{> components/widgets/data-table
                            term-name="Treasure"
                            term-slug="treasure"
                            count="0"
                            isTags="true"
                            }}
                            {{> components/widgets/data-table
                            term-name="Thriller"
                            term-slug="thriller"
                            count="0"
                            isTags="true"
                            }}
                            {{> components/widgets/data-table
                            term-name="Ships"
                            term-slug="ships"
                            count="0"
                            isTags="true"
                            }}
                            {{> components/widgets/data-table
                            term-name="Romance"
                            term-slug="romance"
                            count="0"
                            isTags="true"
                            }}
                            {{> components/widgets/data-table
                            term-name="Pirates"
                            term-slug="pirates"
                            count="0"
                            isTags="true"
                            }}
                            {{> components/widgets/data-table
                            term-name="Mythology"
                            term-slug="mythology"
                            count="0"
                            isTags="true"
                            }}
                            {{> components/widgets/data-table
                            term-name="Kings"
                            term-slug="kings"
                            count="0"
                            isTags="true"
                            }}
                            {{> components/widgets/data-table
                            term-name="Guns"
                            term-slug="guns"
                            count="0"
                            isTags="true"
                            }}
                            {{> components/widgets/data-table
                            term-name="Family"
                            term-slug="family"
                            count="0"
                            isTags="true"
                            }}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
{{!-- edit --}}
<div class="offcanvas offcanvas-end offcanvas-width-80" tabindex="-1" id="season-offcanvas-edit">
    <div class="offcanvas-header">
        <h2 class="episode-playlist-title wp-heading-inline">
            <span class="position-relative ">
                Update Tag</span>
        </h2>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <form>
            <div class="section-form">
                <div class="form-group">
                    <label class="form-label" for="name">Tag Name <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="name" value="Vikings">
                </div>
                <div class="form-group">
                    <label class="form-label" for="Slug1">Tag Slug <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="Slug1" value="vikings">
                </div>
                <div class="form-group">
                    <label class="form-label flex-grow-1" for="Description1">
                        Tag Description
                    </label>
                    <textarea id="Description1" class="form-control" rows="7"></textarea>
                </div>
            </div>
        </form>
    </div>
    <div class="offcanvas-footer border-top">
        <div class="d-flex gap-3 p-3">
            <button type="submit" class="btn btn-primary d-flex align-items-center gap-2">
                <i class="ph-fill ph-floppy-disk-back"></i>Save
            </button>
            <button type="button" class="btn btn-outline-primary d-flex align-items-center gap-2" data-bs-dismiss="offcanvas"
                aria-label="Close">
                <i class="ph ph-caret-double-left"></i>Close
            </button>
        </div>
    </div>
</div>

{{/content}}
{{/extend}}