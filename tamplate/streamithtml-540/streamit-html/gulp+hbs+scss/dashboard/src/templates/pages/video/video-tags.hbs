{{#extend layout title="videos-tags" isBanner="false" ActiveLink="videos" active="videos-tags"
isSelect2="true" isSweetalert="true" path="../" }}
{{#content "content"}}

<div class="row streamit-wraper-table2">
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h2 class="episode-playlist-title wp-heading-inline">
                    <span class="position-relative ">  Add New Video Tag</span>
                </h2>
            </div>
            <div class="card-body">
                <form>
                    <div class="form-group">
                        <label class="form-label" for="category-name">Tag Name *</label>
                        <input type="text" class="form-control" id="category-name"
                            placeholder="Enter title of the tag.">
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="category-slug">Tag Slug *</label>
                        <input type="text" class="form-control" id="category-slug" placeholder="Enter slug of the tag.">
                    </div>

                    <div class="form-group">
                        <label class="form-label">Tag Description</label>
                        <textarea class="form-control large-text" aria-label="With textarea"></textarea>

                    </div>
                    <div class="d-flex align-items-center justify-content-end mt-4">
                        <button class="btn btn-primary">Add Video Tag</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
    <div class="col-lg-8">
        <div class="card">
            <div class="pb-3">
                <div class="card-header d-flex justify-content-between gap-3 flex-wrap align-items-center mb-4">
                    <h2 class="episode-playlist-title wp-heading-inline">
                        <span class="position-relative "> Video Tags </span>
                    </h2>
                </div>
                <div class="card-body pt-0">
                    <div class="table-view table-space">
                        <table id="seasonTable"
                            class="data-tables table custom-table movie_table data-table-one custom-table-height"
                            data-toggle="data-table1">
                            <thead>
                                <tr class=" text-uppercase">
                                    <th class="">
                                        <input type="checkbox" class="form-check-input" />
                                    </th>
                                    <th class="">Tag Name</th>
                                    <th class="">Tag Slug</th>
                                    <th class="">Count</th>
                                    <th class="">Actions</th>
                                </tr>
                            </thead>
                            <tbody>

                                {{> components/widgets/data-table
                                isTags="true"
                                term-name = "Universe"
                                term-slug="universe"
                                count = "1"
                                viewsValue="true"
                                }}

                                {{> components/widgets/data-table
                                isTags="true"
                                term-name = "Thriller"
                                term-slug="Thriller"
                                count = "1"
                                viewsValue="true"
                                }}

                                {{> components/widgets/data-table
                                isTags="true"
                                term-name = "Romance"
                                term-slug="Romance"
                                count = "3"
                                viewsValue="true"
                                }}

                                {{> components/widgets/data-table
                                isTags="true"
                                term-name = "Melodrama"
                                term-slug="Melodrama"
                                count = "1"
                                viewsValue="true"
                                }}


                                {{> components/widgets/data-table
                                isTags="true"
                                term-name = "Magic"
                                term-slug="Magic"
                                count = "1"
                                viewsValue="true"
                                }}

                                {{> components/widgets/data-table
                                isTags="true"
                                term-name = "Horror"
                                term-slug="horror"
                                count = "0"
                                viewsValue="true"
                                }}

                                {{> components/widgets/data-table
                                isTags="true"
                                term-name = "Fantasy"
                                term-slug="fantasy"
                                count = "0"
                                viewsValue="true"
                                }}

                                {{> components/widgets/data-table
                                isTags="true"
                                term-name = "Family"
                                term-slug="family"
                                count = "0"
                                viewsValue="true"
                                }}

                                {{> components/widgets/data-table
                                isTags="true"
                                term-name = "Drama"
                                term-slug="drama"
                                count = "1"
                                viewsValue="true"
                                }}

                                {{> components/widgets/data-table
                                isTags="true"
                                term-name = "Dragons"
                                term-slug="dragons"
                                count = "3"
                                viewsValue="true"
                                }}
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="offcanvas offcanvas-end offcanvas-width-80" tabindex="-1" id="season-offcanvas-edit">
    <div class="offcanvas-header">
        <h2 class="episode-playlist-title wp-heading-inline">
            <span class="position-relative "> Update Video Tag </span>
        </h2>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <form>
            <div class="section-form">
                <div class="form-group">
                    <label class="form-label" for="category-name1">Tag Name *</label>
                    <input type="text" class="form-control" id="category-name1"
                        placeholder="Enter title of the genre.">
                </div>
                <div class="form-group">
                    <label class="form-label" for="category-slug1">Tag Slug *</label>
                    <input type="text" class="form-control" id="category-slug1"
                        placeholder="Enter slug of the genre.">
                </div>
                <div class="form-group">
                    <label class="form-label">Tag Description</label>
                    <textarea class="form-control large-text" aria-label="With textarea"></textarea>

                </div>

            </div>
        </form>
    </div>
    <div class="offcanvas-footer border-top">
        <div class="d-flex gap-3 p-3">
            <button type="submit" class="btn btn-primary d-flex align-items-center gap-2">
                <i class="ph-fill ph-floppy-disk-back"></i>Save
            </button>
            <button type="button" class="btn btn-outline-primary d-flex align-items-center gap-2" data-bs-dismiss="offcanvas" aria-label="Close">
                <i class="ph ph-caret-double-left"></i>Close
            </button>
        </div>
    </div>
    </div>
</div>

{{/content}}
{{/extend}}