{{#extend 'layouts/dashboard/simple' isSidebar="false" isNavbar="false" isBanner="false" isPageContainer="false"
title="Two Factor" active="two-factor" path="../" }}
{{#content "content"}}
<section class="sign-in-page" style="background-image: url('{{path}}assets/images/login/login.webp')">
   <div class="container">
      <div class="row justify-content-center align-items-center height-self-center">
         <div class="col col-lg-5 col-md-12 align-self-center form-padding">
            <div class="sign-user_card">
               <a href="{{path}}index.html">
                  <img class="img-fluid logo" src="{{path}}assets/images/logo-full.png" alt="#">
               </a>
               <div class="sign-in-page-data">
                  <div class="sign-in-from w-100 m-auto">
                     <h3 class="mb-3 text-center">Two Factor - Verification</h3>
                     <p class="text-body">Enter your email address and weâ€™ll send you an email with instructions to
                        reset your password
                     </p>

                     <form class="mt-4">
                        <div class="form-group floating-label">
                           <label for="email" class="form-label">Phone Number</label>
                           <input id="email" type="email" class="form-control" aria-describedby="email"
                              placeholder="+1 123456789">
                        </div>
                        <button class="btn btn-primary w-100 custom-sign-btn mt-2">Reset</button>

                        <div class="form-group mt-3">
                           <label for="email" class="form-label">Enter the OTP you received to verify your
                              device</label>
                           <input type="number" class="form-control" aria-describedby="email"
                              placeholder="0000">
                        </div>
                        <button class="btn btn-primary w-100 custom-sign-btn mt-2">Verify</button>
                     </form>
                  </div>
               </div>
               <div class="mt-2">
                  <div class="d-flex justify-content-center links">Don't have an account? <a href="{{path}}auth/sign-up.html"
                        class="text-primary ms-2">Sign Up</a></div>
                  <div class="d-flex justify-content-center links">
                     <a href="{{path}}auth/recoverpw.html" class="f-link">Forgot your password?</a>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</section>
{{/content}}
{{/extend}}