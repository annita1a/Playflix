{{#extend 'layouts/dashboard/simple' isSidebar="false" isNavbar="false" isBanner="false" isPageContainer="false"
title="Account Deactivate" active="account-deactivate" path="../" }}
{{#content "content"}}
<section class="sign-in-page" style="background-image: url('{{path}}assets/images/login/login.webp')">
   <div class="container">
      <div class="row justify-content-center align-items-center height-self-center">
         <div class="col col-lg-5 col-md-12 align-self-center form-padding">
            <div class="sign-user_card">
               <a href="{{path}}index.html">
                  <img class="img-fluid logo" src="{{path}}assets/images/logo-full.png" alt="#">
               </a>
               <div class="sign-in-page-data">
                  <div class="sign-in-from w-100 m-auto">
                     <h3 class="mb-3 text-center">Account De-activate</h3>
                     <p class="text-body text-center">Enter your details to de-activate your account</p>

                     <form class="mt-4">
                        <div class="form-group">
                           <label for="email">Email</label>
                           <input class="form-control" id="email" type="email" aria-describedby="email"
                              placeholder="xyz@example.com">
                        </div>
                        <div class="form-group mt-3">
                           <label for="name">Username</label>
                           <input class="form-control" id="name" type="text" aria-describedby="name" placeholder="XYZ">
                        </div>
                     </form>
                     <button class="btn btn-primary w-100 custom-sign-btn mt-2">De-activate</button>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</section>
{{/content}}
{{/extend}}