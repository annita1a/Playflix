{{#extend layout title="video-category" isBanner="false" ActiveLink="videos" active="video-category"
isSelect2="true" isSweetalert="true" isQuillEditor="true" path="../" }}
{{#content "content"}}


<div class="row streamit-wraper-table2">
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h2 class="episode-playlist-title wp-heading-inline">
                    <span class="position-relative "> Add New Video Category</span>
                </h2>
            </div>
            <div class="card-body">
                <form>
                    <div class="form-group">
                        <label class="form-label" for="category-name1">Category Name *</label>
                        <input type="text" class="form-control" id="category-name1"
                            placeholder="Enter title of the genre.">
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="category-slug1">Category Slug</label>
                        <input type="text" class="form-control" id="category-slug1"
                            placeholder="Enter slug of the genre.">
                    </div>

                    <div class="form-group">
                        <label class="form-label" for="parent-category">Parent Category</label>
                        <select id="parent-category" class="form-control select2-basic-multiple">
                            <option>Add Parent Genre</option>
                            <option>Action</option>
                            <option>Adventure</option>
                            <option>Animation</option>
                            <option>Crime</option>
                            <option>Horror</option>
                            <option>Mystery</option>
                            <option>Romance</option>
                            <option>TEST GENRES</option>
                            <option>TEST GENRES</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Category Description</label>
                        <textarea class="form-control large-text" aria-label="With textarea"></textarea>

                    </div>

                    {{> components/widgets/upload-image-video
                    upload-image-name="Thumbnail"
                    }}


                    <div class="d-flex align-items-center justify-content-end mt-4">
                        <button class="btn btn-primary">Add Category</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
    <div class="col-lg-8">
        <div class="streamit-wraper-table card pb-3">
            <div class="card-header d-flex justify-content-between gap-3 flex-wrap align-items-center mb-4">
                <h2 class="episode-playlist-title wp-heading-inline">
                    <span class="position-relative"> Video Categories </span>
                </h2>
            </div>
            <div class="card-body">
                <div class="table-view table-space">
                    <table id="seasonTable" class="data-tables table custom-table movie_table data-table-one"
                        data-toggle="data-table1">
                        <thead>
                            <tr class="text-uppercase">
                                <th class="">
                                    <input type="checkbox" class="form-check-input" />
                                </th>
                                <th class="">Thumbnail</th>
                                <th class="">Name</th>
                                <th class="">Slug</th>
                                <th class="">Parent Genre</th>
                                <th class="">Count</th>
                                <th class="">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{> components/widgets/data-table
                                title = "Romance"
                                thumbnail="genres/romance.webp"
                                slug="romance"
                                date= "None"
                                views = "2"
                                viewsValue="true"
                                }}

                                {{> components/widgets/data-table
                                title = "Mystery"
                                thumbnail="genres/mystery.webp"
                                slug="mystery"
                                date="	None"
                                views = "14"
                                viewsValue="true"
                                }}

                                {{> components/widgets/data-table
                                title = "Horror"
                                thumbnail="genres/horror.webp"
                                slug="horror"
                                date="None"
                                views = "13"
                                viewsValue="true"
                                }}

                                {{> components/widgets/data-table
                                title = "Crime"
                                thumbnail="genres/Crime.webp"
                                slug="crime"
                                date="None"
                                views = "10"
                                viewsValue="true"
                                }}

                                {{> components/widgets/data-table
                                title = "Animation"
                                thumbnail="genres/animation.webp"
                                slug="animation	"
                                date="None"
                                views = "10"
                                viewsValue="true"
                                }}

                                {{> components/widgets/data-table
                                title = "Adventure"
                                thumbnail="genres/adventure.webp"
                                slug="adventure"
                                date="None"
                                views = "18"
                                viewsValue="true"
                                }}

                                {{> components/widgets/data-table
                                title = "Action"
                                thumbnail="genres/action.webp"
                                slug="action"
                                date="None"
                                views = "22"
                                viewsValue="true"
                                }}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="offcanvas offcanvas-end offcanvas-width-80" tabindex="-1" id="season-offcanvas-edit">
    <div class="offcanvas-header">
        <h2 class="episode-playlist-title wp-heading-inline">
            <span class="position-relative ">
                Update Video Category </span>
        </h2>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <form>
            <div class="section-form">
                <div class="form-group">
                    <label class="form-label" for="category-name">Category Name *</label>
                    <input type="text" class="form-control" id="category-name"
                        placeholder="Enter title of the genre.">
                </div>
                <div class="form-group">
                    <label class="form-label" for="category-slug">Category Slug *</label>
                    <input type="text" class="form-control" id="category-slug"
                        placeholder="Enter slug of the genre.">
                </div>
                <div class="form-group">
                    <label class="form-label" for="parent-category1">Parent Category *</label>
                    <select id="parent-category1" class="form-control select2-basic-multiple">
                        <option>Add Parent Genre</option>
                        <option>Action</option>
                        <option>Adventure</option>
                        <option>Animation</option>
                        <option>Crime</option>
                        <option>Horror</option>
                        <option>Mystery</option>
                        <option>Romance</option>
                        <option>TEST GENRES</option>
                        <option>TEST GENRES</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="form-label">Category Description</label>
                    <textarea class="form-control large-text" aria-label="With textarea"></textarea>

                </div>

                {{> components/widgets/upload-image-video
                upload-image-name="Thumbnail"
                isUploadImageDefault="true"}}
            </div>
        </form>
    </div>
    <div class="offcanvas-footer border-top">
        <div class="d-flex gap-3 p-3">
            <button type="submit" class="btn btn-primary d-flex align-items-center gap-2">
                <i class="ph-fill ph-floppy-disk-back"></i>Save
            </button>
            <button type="button" class="btn btn-outline-primary d-flex align-items-center gap-2" data-bs-dismiss="offcanvas" aria-label="Close">
                <i class="ph ph-caret-double-left"></i>Close
            </button>
        </div>
    </div>
</div>

{{/content}}
{{/extend}}